<?xml version="1.0"?>
<!DOCTYPE mech [
  <!ELEMENT mech   (name,stats,design?)
    <!ELEMENT name (#PCDATA)>
    <!ELEMENT stats  (maxTurnRate,
          maxForwardAcceleration,
          maxBackwardAcceleration,
          maxSpeed)>
      <!ELEMENT maxForwardAcceleration (#PCDATA)>
      <!ELEMENT maxBackwardAcceleration (#PCDATA)>
      <!ELEMENT maxSpeed (#PCDATA)>
    <!ELEMENT design (torso, arm*, leg*)>
      <!ELEMENT torso  (slot*)>
        <!ATTLIST torso turningRadius CDATA #REQUIRED>
      <!ELEMENT arm    (slot*)>
      <!ELEMENT leg    (EMPTY)>
      <!ELEMENT slot   (weapon)>
        <!ELEMENT weapon (#PCDATA)>
  <!ELEMENT media  (mesh+)>
    <!ELEMENT mesh>
      <!ATTLIST mesh type CDATA #REQUIRED>
      <!ATTLIST mesh file CDATA #REQUIRED> 
]>



