// Pixel shader for coloring mechs
fragment_program AP/MeshColor cg
{
	source MechColorize.cg
	entry_point main_fp
	profiles ps_1_1 arbfp1

    default_params {
	param_named modColor float4 1.0 1.0 1.0 0
    }
}


material AP/Mech/MechMaterial
{
	receive_shadows on
	technique
	{
		pass
		{
			fragment_program_ref AP/MeshColor
			{
				// This means parameter modColor can be set from code
				// by setting parameter 1.
				param_named_auto modColor custom 1
			}

			ambient 0.500000 0.500000 0.500000 1.000000
			diffuse 0.640000 0.640000 0.640000 1.000000
			specular 0.500000 0.500000 0.500000 1.000000 12.500000
			emissive 0.000000 0.000000 0.000000 1.000000
		}
	}
}